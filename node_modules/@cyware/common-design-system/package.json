{
  "name": "@cyware/common-design-system",
  "version": "1.2.4",
  "description": "A css library to create common UI for all Cyware Products.",
  "main": "cds.scss",
  "sass": "cds.scss",
  "style": "css/index.min.css",
  "scripts": {
    "build": "rimraf dist && rimraf lib && npm run build-sass && npm run build-js && npm run build-cleancss && cp -r ./scss ./lib",
    "build-sass": "sass main.scss:lib/css/index.css",
    "build-js": "rollup -c",
    "build-cleancss": "cleancss -o ./lib/css/index.min.css ./lib/css/index.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist",
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/js/index.min.js"
    },
    "./index.js": "./lib/js/index.min.js",
    "./index.css": "./lib/css/index.min.css",
    "./utilities/index.scss": "./lib/scss/utilities/index.scss"
  },
  "keywords": [
    "css",
    "sass",
    "framework"
  ],
  "author": "Cyware Labs",
  "type": "module",
  "license": "ISC",
  "devDependencies": {
    "@web/rollup-plugin-html": "^2.0.0",
    "clean-css-cli": "^5.6.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.26.2",
    "sass": "^1.53.0"
  }
}
